<% if model.errors.any? %>
  <div class="errors" id="errorExplanation">
    <h2 class="text-error"><%= pluralize(model.errors.count, "error") %> prohibited this
      <%= model.class.to_s.humanize %> from being saved</h2>
    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
