<%= link_to edit_item_path(item), class: "item-presentation#{(item.description.present?) ? ' expandable' : ''}", remote: true do %>
  <% if item.author.present? %>
    <div class="item-author"><%= item.author %></div>
  <% end %>
    <div class="item-title"><%= date_label(item) %><%= item.title %></div>
  <% if item.description.present? %>
    <div class="item-description closed"><%= raw GitHub::Markdown.render_gfm(item.description) %></div>
    <div class="item-description-expander closed"></div>
  <% end %>
<% end %>


